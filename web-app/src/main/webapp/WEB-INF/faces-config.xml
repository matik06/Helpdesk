<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd" 
    version="2.0">
 
    <!-- JSF and Spring are integrated -->
    <application>        
        <!--
            Now, whenever JSF sees a bean name, it uses JSF rules first, then Spring rules next.
        -->
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
        
        <locale-config>
            <default-locale>pl_PL</default-locale>
        </locale-config>        

        <!-- 
            Default messages generated by jsf or primefaces like validation not null etc
        -->
        <message-bundle>default-messages</message-bundle>
        
        <!--
            Ohter messages in application
        -->
        <resource-bundle>
            <base-name>messages</base-name>
            <var>msg</var>
        </resource-bundle>        
        
    </application>
    
    <lifecycle>
        <phase-listener>org.omnifaces.eventlistener.ResetInputAjaxActionListener</phase-listener>
<!--        <phase-listener>pl.helpdesk.security.LoginErrorPhaseListener</phase-listener>-->
    </lifecycle>
 
</faces-config>